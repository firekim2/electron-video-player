{
  "name": "minkiii-video-player",
  "productName": "Minkiii Video Player",
  "description": "Video player for exhibition",
  "version": "0.0.1",
  "main": "app/main.js",
  "author": "Sungwoo Kim forked from RIAEvangelist/electron-video-player",
  "dependencies": {},
  "scripts": {
    "start": "electron .",
    "deploy-win": "electron-builder --windows --x64",
    "deploy-mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron-builder": "^10.9.3",
    "electron": "7.1.2"
  },
  "license": "DBAD",
  "build": {
    "productName": "Minkiii player",
    "appId": "com.electron.minkiplayer",
    "asar": true,
    "protocols": {
      "name": "MinkiiiPlayer",
      "schemes": [
        "MinkiiiPlayer"
      ]
    },
    "win": {
      "target": [
        "zip",
        "nsis"
      ],
      "icon": "./resources/installer/favicon.png"
    },
    "mac": {
      "target": [
           "default"
      ],
      "icon": "./resources/installer/favicon.png"
    },
    "dmg": {
      "title": "tournant",
      "icon": "./resources/installer/favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "buildResources": "./resources/installer/",
      "output": "./dist/",
      "app": "."
    }
  }
}
